<% layout('layouts/boilerplate')%>
    <div id="cluster-map"></div>
    <div class="container mb-5">
        <h1 class='my-5 text-center'>All Sites</h1>
        <% for (let site of sites){%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if (site.images.length) { %>
                            <img class="img-fluid" alt="" src="<%= site.images[0].url %>">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= site.title %>
                            </h5>
                            <p class="card-text">
                                <%= site.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= site.location%>
                                </small>
                            </p>
                            <a class="btn btn-sm rounded-pill btn-dark" href="/sites/<%=site._id%>">View <%=site.title%></a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
    </div>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const sites = { features: <%- JSON.stringify(sites) %> }
    </script>

    <script src="/javascripts/clusterMap.js"></script>